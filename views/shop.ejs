<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Shop</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.1.3/simplex/bootstrap.min.css">
  <style media="screen">
    body::before {
      content: "";
      position: fixed;
      width: 100%;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      opacity: 0.5;
      z-index: -1;
      background-repeat: no-repeat;
      background-size: 100% 100%;
      background-image: url('https://www.publicdomainpictures.net/pictures/240000/velka/white-canvas-background.jpg');
    }

    body {
      margin-top: 75px;
      z-index: 1;
      opacity: 1;
    }

    .grid-container {
      display: grid;
      grid-template-columns: auto auto auto;
      padding: 10px;
      grid-column-gap: 25px;
      grid-row-gap: 25px;
    }

    .grid-item {
      padding: 20px;
      font-size: 15px;
      text-align: center;
    }

    .add-to-cart,
    .add-to-wish {
      color: white;
    }

    .add-to-cart:hover {
      color: white;
    }

    .add-to-wish:hover {
      color: white;
    }

    .images {
      padding-bottom: 10px;
      max-width: 500px;
    }

    .form {
      padding-top: 10px;
    }

    .select {
      padding-top: 10px;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <a class="navbar-brand active" href="/shop">shop</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

    <div class="collapse navbar-collapse" id="navbarColor03">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">home <span class="sr-only"></span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/canvas">tp on canvas</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/contact">contact</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/cart">cart</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/wishlist">wishlist</a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="grid-container">
    <% for(let i = 0; i < paintings.length; i++ ) { %>
      <div class="grid-item">
        <h1><%= paintings[i].genre %></h1>
        <h2><%= paintings[i].series %></h2>
        <img class="images" src="<%= paintings[i].img_location %>">
        <div class="form">
          <form action="/cart/<%= paintings[i].id %>" method="post">
            <button type="submit" class="btn btn-primary">Add to cart</button>
            <button type="submit" class="btn btn-info">Add to wishlist</button>
            <div class="select">
              <select name="price" class="select" required>
                <option value="" disabled selected >Select a Size</option>
                <% if(paintings[i].tier === 1) { %>
                  <option value="25">8x10: $25</option>
                  <option value="60">11x14: $60</option>
                  <option value="80">12x15: $80</option>
                  <option value="120">16x20: $120</option>
                <%} else if(paintings[i].tier === 2) { %>
                  <option value="36">8x10: $36</option>
                  <option value="90">11x14: $90</option>
                  <option value="120">12x15: $120</option>
                  <option value="180">16x20: $180</option>
                <%}%>
              </select>
            </div>
          </form>
        </div>
      </div>
      <%}%>
  </div>
</body>

</html>
