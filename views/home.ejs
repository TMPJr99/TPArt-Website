  <style media="screen">
    body::before {
      content: "";
      position: fixed;
      width: 100%;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      opacity: 0.5;
      z-index: -1;
      background-repeat: no-repeat;
      background-size: 100% 100%;
      background-image: url('https://www.publicdomainpictures.net/pictures/240000/velka/white-canvas-background.jpg');
    }

    body {
      position: absolute;
      margin-top: 75px;
      z-index: 1;
      opacity: 1;
    }

    .slide {
      width: 600px;
      margin-left: 290px;
      margin-bottom: 100px;
    }

    .header_img {
      margin: 25px 0 25px 0;
      height: 40vh;
      width: inherit;
    }

    .artists_msg {
      margin: 125px;
    }

    .msg-text {
      text-shadow: -1px -1px 0 #f9f9f9,
      1px -1px 0 #f9f9f9,
      -1px 1px 0 #f9f9f9,
      1px 1px 0 #f9f9f9;
    }

    footer {
      padding: 25px;
      margin-top: 0;
    }

    .footer-divider {
      margin-bottom: 0;
    }

    nav a {
      font-size: 12pt;
    }
  </style>
</head>

