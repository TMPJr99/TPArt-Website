<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Admin orders</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.1.3/simplex/bootstrap.min.css">
  <style media="screen">
    body::before {
      content: "";
      position: fixed;
      width: 100%;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      opacity: 0.5;
      z-index: -1;
      background-repeat: no-repeat;
      background-size: 100% 100%;
      background-image: url('https://www.publicdomainpictures.net/pictures/240000/velka/white-canvas-background.jpg');
    }

    body {
      margin-top: 75px;
      z-index: 1;
      opacity: 1;
      overflow-x: hidden;
      margin-left: 20px;
    }


    .grid-container {
      display: grid;
      grid-template-columns: auto;
      padding: 10px;
      grid-column-gap: 25px;
      grid-row-gap: 25px;
    }

    .grid-item {
      padding: 20px;
      font-size: 15px;
      border: 1px solid #e6e6e6;
      max-width: 50%;
      background-color: rgb(255, 255, 255);
    }

    hr {
      border: 0;
      height: 0;
      border-top: 1px solid rgba(0, 0, 0, 0.1);
      border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    }

    .heading{
      margin-left: 5px;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <a class="navbar-brand active" href="/admin-orders">orders</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

    <div class="collapse navbar-collapse" id="navbarColor03">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">home <span class="sr-only"></span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/shop">shop</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/canvas">tp on canvas</a>
        </li>
        <% if(!admin){ %>
        <li class="nav-item">
          <a class="nav-link" href="/cart">cart</a>
        </li>
        <% } %>
        <% if(admin){ %>
        <li class="nav-item">
          <a class="nav-link" href="/logout">logout</a>
        </li>
        <% } %>
      </ul>
    </div>
  </nav>

  <div class="grid-container">
    <h1 class="heading">Orders</h1>
    <% for(let i = orders.length - 1; i >= 0; i--) { %>
      <div class="grid-item">
        <h2>Name: <%= orders[i].name %></h2>
        <h3>Email: <%= orders[i].email %></h3>
        <h3>Address: <%= orders[i].address %></h3>
        <h3>Status: <%= orders[i].status %></h3>
        <% if(orders[i].status === "ordered"){ %>
          <form class="" action="/admin/orders/<%= orders[i].id %>" method="post">
            <button class="btn btn-primary" value="blah" type="submit" name="enroute">En Route</button>
          </form>
        <% }else if(orders[i].status === "en route"){ %>
          <form class="" action="/admin/orders/<%= orders[i].id %>" method="post">
            <button class="btn btn-primary" value="blah" type="submit" name="delivered">Delivered</button>
          </form>
        <% }else if(orders[i].status === "delivered"){ %>
          <form class="" action="/admin/orders/<%= orders[i].id %>" method="post">
            <button class="btn btn-primary" value="blah" type="submit" name="delete">Delete Order</button>
          </form>
        <% } %>
      </div>
    <% } %>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>

</html>
